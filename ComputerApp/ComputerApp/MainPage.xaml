    <ScrollView>
        <StackLayout Padding="5,5,5,5" Margin="0,5,0,0" BackgroundColor="White">
            <Image Source="img.png" WidthRequest="120" HeightRequest="120" />
            <Label Text="Computer Applications Class X (Code 165)" TextColor="Black" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"></Label>

            <Button Text="CSS Notes" 
