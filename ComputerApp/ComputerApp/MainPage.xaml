                VerticalOptions="CenterAndExpand" FontSize="Large"
                HorizontalOptions="FillAndExpand" Margin="0,0,0,-120"
                Clicked="HTML_Clicked" BackgroundColor="#ABA603" TextColor="White" />
            <Button Text="Cyber Ethics" 
                VerticalOptions="CenterAndExpand" FontSize="Large"
                HorizontalOptions="FillAndExpand" Margin="0,0,0,-120"
                Clicked="Cyber_Clicked" BackgroundColor="#1054B6" TextColor="White" />
            <Button Text="Networking" 
                VerticalOptions="CenterAndExpand" FontSize="Large"
                HorizontalOptions="FillAndExpand"
                Clicked="Network_Clicked" BackgroundColor="#710D94" TextColor="White" />
        </StackLayout>
